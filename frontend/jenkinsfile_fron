pipeline {
    agent any
    
    tools {
        nodejs 'nodejs23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/wafaabbes/frontend26.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    script {
                        if (fileExists('node_modules')) {
                            echo "node_modules exists, skipping install"
                        } else {
                            sh 'npm install'
                        }
                    }
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
        
        stage('GitLeaks Scan') {
            steps {
                sh 'gitleaks detect --source ./frontend --exit-code 1 || true'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh '''$SCANNER_HOME/bin/sonar-scanner \
                           -Dsonar.projectName=NodeJS-Project \
                           -Dsonar.projectKey=NodeJS-Project'''
                }
            }
        }
        
        stage('Quality Gate Check') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    script {
                        def qg = waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                        if (qg.status != 'OK') {
                            echo "⚠ Quality Gate status: ${qg.status} — pipeline continues for testing purposes."
                        } else {
                            echo "✅ Quality Gate passed!"
                        }
                    }
                }
            }
        }
        
        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs --format table -o fs-report.html . || true'
            }
        }
        
        stage('Build & Tag Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-crede') {
                        dir('frontend') {
                            sh 'docker build -t wafa23/frontend26:latest .'
                            sh 'trivy image --format table -o frontend26-image-report.html wafa23/frontend26:latest || true'
                            sh 'docker push wafa23/frontend26:latest'
                        }
                    }
                }
            }
        }
        
        stage('Completion') {
            steps {
                echo '✅ Pipeline completed (Quality Gate may be WARNING/ERROR).'
            }
        }
    }
}
