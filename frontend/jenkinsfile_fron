pipeline {
    agent any

    tools {
        nodejs 'nodejs23'  // Node 23 pour compatibilité Next.js
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_BUILDKIT = '1'  // activer BuildKit
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/wafaabbes/frontend26.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    script {
                        if (fileExists('node_modules')) {
                            echo "node_modules exists, skipping install"
                        } else {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('GitLeaks Scan') {
            steps {
                sh 'gitleaks detect --source ./frontend --exit-code 1 || true'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """$SCANNER_HOME/bin/sonar-scanner \
                          -Dsonar.projectName=NodeJS-Project \
                          -Dsonar.projectKey=NodeJS-Project"""
                }
            }
        }

        stage('Quality Gate Check') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    script {
                        def qg = waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                        echo "⚠ Quality Gate status: ${qg.status} — pipeline continues for testing purposes."
                    }
                }
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs --format table -o fs-report.html ./frontend || true'
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    def dockerAvailable = sh(script: 'docker info > /dev/null 2>&1 && echo OK || echo FAIL', returnStdout: true).trim()
                    if (dockerAvailable == 'OK') {
                        withDockerRegistry(credentialsId: 'docker-crede') {
                            dir('frontend') {
                                sh 'docker build --progress=plain -t wafa23/frontend26:latest .'
                                sh 'trivy image --format table -o frontend26-image-report.html wafa23/frontend26:latest'
                                sh 'docker push wafa23/frontend26:latest'
                            }
                        }
                    } else {
                        echo "⚠ Docker non disponible ou permissions insuffisantes, skipping Docker build/push."
                    }
                }
            }
        }

        stage('Completion') {
            steps {
                echo '✅ Pipeline completed successfully (Docker + scans intégrés).'
            }
        }
    }
}
